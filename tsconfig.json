{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "layers"
  ]
}
